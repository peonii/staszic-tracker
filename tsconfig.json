{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ES2017",
        "noImplicitAny": true,
        "strict": true,
        "allowJs": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}